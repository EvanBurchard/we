<div  data-ng-controller="MessengerCtrl"  class="messenger-area-wrapper">
  <div class="messenger-column">
    <div class="messenger-area">
      <div class="messenger">
        <div class="header">
          Bate papo
          <button class="btn btn-mini pull-right"><span class="ui-icon ui-icon-gear"></span></button>
        </div>
        <ul class="nav nav-list friendlist contact-list">
          <li data-ng-repeat="contact in contacts"  >
            <a>
              <img class="avatar-small" src="/images/avatars/user-avatar.png"> {{contact.name}}
            </a>
          </li>
        </ul>
        <div class="search-area">
          <input type="text" placeholder="Search">
        </div>
      </div>
      <div class="messenger-off">
        <span class="ui-icon ui-icon-person"></span>
        <span class="text"> Bate papo - ( {{contacts.length}} )</span>
        <button class="btn btn-mini pull-right">
          <span class="ui-icon ui-icon-carat-1-n pull-right"></span>
        </button>
      </div>
    </div>
  </div>

  <div data-ng-repeat="contact in contactsOpen">
    <div data-ng-include="template.url"></div>
  </div>
</div>