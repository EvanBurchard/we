<form class="form-signin">
  <h2 class="form-signin-heading">Please sign in</h2>
  <div class="form-group">
    <div class="input-group input-group-lg">
      <label class="input-group-addon" for="email"><%= __('Email') %></label>
      <input type="text" class="form-control" id="email" placeholder="Email address" autofocus="">
    </div>
  </div>
  <div class="form-group">
    <div class="input-group input-group-lg">
      <label class="input-group-addon" for="password"><%= __('Password') %></label>
      <input type="password" class="form-control" id="password" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" value="remember-me"> Remember me
    </label>
  </div>
  <div class="form-group">
    <button id="loginButton" class="btn btn-lg btn-primary btn-block" >Sign in</button>
  </div>
</form>
<script>
   $("#loginButton").click(function(){
            var email = $("#email").val();
            var password = $("#password").val();
            if (email && password) {
                $.post(
                    '/login',
                    {email: email, password:password},
                    function () {
                        //window.location = "/chat";
                    }
                ).fail(function(res){
                    alert("Error: " + res.getResponseHeader("error"));
                });
            } else {
                alert("A email and password is required");
            }
        });
</script>